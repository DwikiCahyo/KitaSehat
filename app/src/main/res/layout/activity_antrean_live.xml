<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud_pendaftaran"
    tools:context=".view.AntreanLiveActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="2dp"
                android:layout_gravity="end"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:text="Perbarui Antrean"
                    android:padding="10dp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_perkiraan_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perkiraan waktu : "
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_tanggal_pendaftraan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pendaftaran : 24 Maret 2001"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_waktu_pendaftaraan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Pendaftaran : 24 Maret 2001"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_ticket_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/btnRefresh"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.vipulasri.ticketview.TicketView
                    android:id="@+id/ticketView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ticketBorderColor="@color/primary"
                    app:ticketBorderWidth="2dp"
                    app:ticketCornerType="rounded"
                    app:ticketDividerPadding="0dp"
                    app:ticketDividerType="dash"
                    app:ticketElevation="8dp"
                    app:ticketOrientation="horizontal"
                    app:ticketScallopPositionPercent="50"
                    app:ticketScallopRadius="10dp"
                    app:ticketShowBorder="true"
                    app:ticketShowDivider="true" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:text="Antrean Saat Ini"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/gray_dark" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/antrean_saat_ini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:text="1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guideline">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Nomor Antrean Anda"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/gray_dark" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/antrean_anda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="1"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/card_yellow" />


                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                app:strokeColor="?attr/colorPrimary"
                android:layout_below="@id/layout_ticket_view"
                android:layout_margin="20dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/iv_icon_layanan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:src = "@drawable/ic_bpjs" />

                    <LinearLayout
                        android:id="@+id/layout_header_layanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_icon_layanan"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_jenis_layanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:text="BPJS"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:textColor="@color/text_item_color" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_rumah_sakit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/layout_header_layanan"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/text_item_color"
                        android:textSize="16sp"
                        tools:text="Rumah Sakit Unipdu Medika" />


                    <LinearLayout
                        android:id="@+id/layout_content_pribadi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tv_rumah_sakit"
                        app:layout_constraintStart_toStartOf="parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:justifyContent="space_between"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fasilitas :"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_item_color"
                                android:textSize="14sp" />



                        </com.google.android.flexbox.FlexboxLayout>

                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:justifyContent="space_between">

                            <TextView
                                android:id="@+id/tv_fasilitas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                tools:text="00000000000000"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="14sp" />


                        </com.google.android.flexbox.FlexboxLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.dwiki.satusehat.customView.CustomButton
                android:id="@+id/btn_batalkan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Batalkan Antrean"
                android:backgroundTint="@color/red_error"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/layout_no_login_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_antrean"
            app:lottie_rawRes="@raw/anim_que"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_header"
            tools:src="@tools:sample/backgrounds/scenic"
            android:layout_marginTop="20dp"
            tools:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:text="Sedang Memuat Data"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_empty_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/anim_empty"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_empty_result"
            android:layout_marginTop="20dp"
            tools:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:text="Anda belum melakukan pendaftaran"
            />
    </LinearLayout>

</RelativeLayout>
