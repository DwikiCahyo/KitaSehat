<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_rumah_sakit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tv_nama_rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_rumah_sakit"
        android:text="Nama Rumah Sakit Haji Puad"
        android:textSize="16sp"
        android:textColor="@color/text_item_color"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Rumah Sakit Haji Puad" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_rs"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/primary" />

</androidx.constraintlayout.widget.ConstraintLayout>