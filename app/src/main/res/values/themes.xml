<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SatuSehat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/gray_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
<!--        setting off darkmode-->
        <item name="android:forceDarkAllowed" tools:targetApi = "q">false</item>

        <!-- Customize your theme here. -->
    </style>

    <!--    Button Primary-->
    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">331dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>